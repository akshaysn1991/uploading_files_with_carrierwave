<% if !@attachment.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @attachment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @attachment, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :data_type, "Select Data Type:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= select_tag "data_type", options_for_select(AppConfig.data_types), :class => "btn btn-default dropdown-toggle" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :attachment, "Upload File:", class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <div class="input-group">
          <span class="input-group-btn">
            <span class="btn btn-primary" onclick="$(this).parent().find('input[type=file]').click();">Browse</span>
                  Upload File: <%= f.file_field :attachment, :onchange => "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\|/]/).pop());", :style => "display: none;" %>
          </span>
          <span class="form-control"></span>
        </div>
      </div>
    </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
       <%= f.submit "Submit", class: "btn btn-info btn-primary" %>  
    </div>
  </div>
 <% end %>